use Campeonato;

create table Jogador(
	idJogador int NOT NULL,
    Nome varchar(50) NOT NULL,
    data_de_nasc date NOT NULL,
    categoria varchar(50) NOT NULL,
    Peso float NOT NULL,
    Altura float NOT NULL,
    Posicao varchar(15) NOT NULL,
    Num_gols int NOT NULL,
    Num_Cartoes_Vermelhos int,
    Num_Cartoes_Amarelos int
    );
    
    create table Time(
    idTime int NOT NULL,
    Nome varchar(50) NOT NULL,
    data_de_funda√ßso date NOT NULL,
    sigla varchar(4) not null,
    N_vitorias int,
    N_derrotas int,
    saldo_de_gols int,
    N_de_partidas int,
    pontuacao int,
    N_empates int
);

create table Jogo(
	 idjogo int NOT NULL,
	N_de_gols int,
    Estadio varchar(50) NOT NULL,
    Data_da_partida DATE not null,
    Horario datetime not null,
    resultado varchar(30) not null
);

create table infracoes(
	Cartao_vermelho int,
    Cartao_amarelo int,
    total_de_faltas int,
    idinfracao int NOT NULL
);

create table Arbitragem(
	idarbitragem int NOT NULL,
    Nome varchar(50) not null
);

create table Tecnico(
	idtecnico int NOT NULL,
    Nome varchar(50) not null
);

create table Serie(
	idserie int not null,
    Nome varchar(10)
);





    
